<!-- Added to color the rollable parts of the character sheet. Stevil... -->
<form id='color-character-sheet-settings' autocomplete='off' class='gga-app'>
  <h3>{{ i18n 'GURPS.settingColorSheetMenuTitle' }}</h3>
  <aside>{{ i18n 'GURPS.settingColorSheetMenuHint' }}</aside>
  <div class='section'>
    <div id='entry-list' class='gurps-sheet-colors overflowy'>
      <header>{{ i18n 'GURPS.colorSheetMenuOverride' }}</header>
      <header>{{ i18n 'GURPS.colorSheetMenuCustomColors' }}</header>
      <header>{{ i18n 'GURPS.colorSheetMenuColorAreas' }}</header>
      {{#each allColors}}
        <hr />
        <div class='override-color'><input type='checkbox' id='{{ rollable_css }}' {{#if color_override}}
            checked='checked' {{/if}} /></div>
        <div class='the-colors'>
          <!-- Color for Background -->
          <div for='{{ rollable_css }}' class='{{ rollable_css }} pick-colors'>
            <div id='colorPicker'>
              <a class='color'>
                <div class='colorInner'></div>
              </a>
              <div class='track'></div>
              <ul class='dropdown'>
                <li></li>
              </ul>
              <input type='hidden' class='default-{{ rollable_css }}' value='{{ default_color_background }}' />
              <input type='hidden' class='colorInput' value='{{ color_background }}' />
            </div>
          </div>
          <div class='area-colors'>
            {{#switch area}}
              {{#case 'Attributes'}}
                {{ i18n 'GURPS.colorSheetMenuAreasAttributesColor' }}
              {{/case}}
              {{#case 'Dodge'}}
                {{ i18n 'GURPS.colorSheetMenuAreasDodgeColor' }}
              {{/case}}
              {{#case 'Damage'}}
                {{ i18n 'GURPS.colorSheetMenuAreasDamageColor' }}
              {{/case}}
              {{#case 'Block'}}
                {{ i18n 'GURPS.colorSheetMenuAreasBlockColor' }}
              {{/case}}
              {{#case 'Parry'}}
                {{ i18n 'GURPS.colorSheetMenuAreasParryColor' }}
              {{/case}}
              {{#case 'Weapons'}}
                {{ i18n 'GURPS.colorSheetMenuAreasWeaponsColor' }}
              {{/case}}
              {{#case 'Skills'}}
                {{ i18n 'GURPS.colorSheetMenuAreasSkillsColor' }}
              {{/case}}
              {{#case 'Spells'}}
                {{ i18n 'GURPS.colorSheetMenuAreasSpellsColor' }}
              {{/case}}
              {{#case 'OtF-Notes'}}
                {{ i18n 'GURPS.colorSheetMenuAreasOtfNotesColor' }}
              {{/case}}
              {{#case 'Ads/Disads'}}
                {{ i18n 'GURPS.colorSheetMenuAreasAdsDisadsColor' }}
              {{/case}}
            {{/switch}}
          </div>
          <br />
          <!-- Color for Text -->
          <div for='{{ rollable_css }}' class='{{ rollable_css }}-text pick-colors'>
            <div id='colorPicker'>
              <a class='color'>
                <div class='colorInner'></div>
              </a>
              <div class='track'></div>
              <ul class='dropdown'>
                <li></li>
              </ul>
              <input type='hidden' class='default-{{ rollable_css }}-text' value='{{ default_color_text }}' />
              <input type='hidden' class='colorInput' value='{{ color_text }}' />
            </div>
          </div>
          <div class='area-colors'>
            {{#switch area}}
              {{#case 'Attributes'}}
                {{ i18n 'GURPS.colorSheetMenuAreasAttributesTextColor' }}
              {{/case}}
              {{#case 'Dodge'}}
                {{ i18n 'GURPS.colorSheetMenuAreasDodgeTextColor' }}
              {{/case}}
              {{#case 'Damage'}}
                {{ i18n 'GURPS.colorSheetMenuAreasDamageTextColor' }}
              {{/case}}
              {{#case 'Block'}}
                {{ i18n 'GURPS.colorSheetMenuAreasBlockTextColor' }}
              {{/case}}
              {{#case 'Parry'}}
                {{ i18n 'GURPS.colorSheetMenuAreasParryTextColor' }}
              {{/case}}
              {{#case 'Weapons'}}
                {{ i18n 'GURPS.colorSheetMenuAreasWeaponsTextColor' }}
              {{/case}}
              {{#case 'Skills'}}
                {{ i18n 'GURPS.colorSheetMenuAreasSkillsTextColor' }}
              {{/case}}
              {{#case 'Spells'}}
                {{ i18n 'GURPS.colorSheetMenuAreasSpellsTextColor' }}
              {{/case}}
              {{#case 'OtF-Notes'}}
                {{ i18n 'GURPS.colorSheetMenuAreasOtfNotesTextColor' }}
              {{/case}}
              {{#case 'Ads/Disads'}}
                {{ i18n 'GURPS.colorSheetMenuAreasAdsDisadsTextColor' }}
              {{/case}}
            {{/switch}}
          </div>
          <br />
          <!-- Color for Background Hover -->
          <div for='{{ rollable_css }}' class='{{ rollable_css }}-hover pick-colors'>
            <div id='colorPicker'>
              <a class='color'>
                <div class='colorInner'></div>
              </a>
              <div class='track'></div>
              <ul class='dropdown'>
                <li></li>
              </ul>
              <input type='hidden' class='default-{{ rollable_css }}-hover' value='{{ default_color_hover }}' />
              <input type='hidden' class='colorInput' value='{{ color_hover }}' />
            </div>
          </div>
          <div class='area-colors'>
            {{#switch area}}
              {{#case 'Attributes'}}
                {{ i18n 'GURPS.colorSheetMenuAreasAttributesHoverColor' }}
              {{/case}}
              {{#case 'Dodge'}}
                {{ i18n 'GURPS.colorSheetMenuAreasDodgeHoverColor' }}
              {{/case}}
              {{#case 'Damage'}}
                {{ i18n 'GURPS.colorSheetMenuAreasDamageHoverColor' }}
              {{/case}}
              {{#case 'Block'}}
                {{ i18n 'GURPS.colorSheetMenuAreasBlockHoverColor' }}
              {{/case}}
              {{#case 'Parry'}}
                {{ i18n 'GURPS.colorSheetMenuAreasParryHoverColor' }}
              {{/case}}
              {{#case 'Weapons'}}
                {{ i18n 'GURPS.colorSheetMenuAreasWeaponsHoverColor' }}
              {{/case}}
              {{#case 'Skills'}}
                {{ i18n 'GURPS.colorSheetMenuAreasSkillsHoverColor' }}
              {{/case}}
              {{#case 'Spells'}}
                {{ i18n 'GURPS.colorSheetMenuAreasSpellsHoverColor' }}
              {{/case}}
              {{#case 'OtF-Notes'}}
                {{ i18n 'GURPS.colorSheetMenuAreasOtfNotesHoverColor' }}
              {{/case}}
              {{#case 'Ads/Disads'}}
                {{ i18n 'GURPS.colorSheetMenuAreasAdsDisadsHoverColor' }}
              {{/case}}
            {{/switch}}
          </div>
          <br />
          <!-- Color for Hover Text -->
          <div for='{{ rollable_css }}' class='{{ rollable_css }}-hover-text pick-colors'>
            <div id='colorPicker'>
              <a class='color'>
                <div class='colorInner'></div>
              </a>
              <div class='track'></div>
              <ul class='dropdown'>
                <li></li>
              </ul>
              <input type='hidden' class='default-{{ rollable_css }}-hover-text'
                value='{{ default_color_hover_text }}' />
              <input type='hidden' class='colorInput' value='{{ color_hover_text }}' />
            </div>
          </div>
          <div class='area-colors'>
            {{#switch area}}
              {{#case 'Attributes'}}
                {{ i18n 'GURPS.colorSheetMenuAreasAttributesHoverTextColor' }}
              {{/case}}
              {{#case 'Dodge'}}
                {{ i18n 'GURPS.colorSheetMenuAreasDodgeHoverTextColor' }}
              {{/case}}
              {{#case 'Damage'}}
                {{ i18n 'GURPS.colorSheetMenuAreasDamageHoverTextColor' }}
              {{/case}}
              {{#case 'Block'}}
                {{ i18n 'GURPS.colorSheetMenuAreasBlockHoverTextColor' }}
              {{/case}}
              {{#case 'Parry'}}
                {{ i18n 'GURPS.colorSheetMenuAreasParryHoverTextColor' }}
              {{/case}}
              {{#case 'Weapons'}}
                {{ i18n 'GURPS.colorSheetMenuAreasWeaponsHoverTextColor' }}
              {{/case}}
              {{#case 'Skills'}}
                {{ i18n 'GURPS.colorSheetMenuAreasSkillsHoverTextColor' }}
              {{/case}}
              {{#case 'Spells'}}
                {{ i18n 'GURPS.colorSheetMenuAreasSpellsHoverTextColor' }}
              {{/case}}
              {{#case 'OtF-Notes'}}
                {{ i18n 'GURPS.colorSheetMenuAreasOtfNotesHoverTextColor' }}
              {{/case}}
              {{#case 'Ads/Disads'}}
                {{ i18n 'GURPS.colorSheetMenuAreasAdsDisadsHoverTextColor' }}
              {{/case}}
            {{/switch}}
          </div>
          <br />
          <!-- End of Colors -->
        </div>
      {{/each}}
    </div>
  </div>
  <div class='section'>
    <button id='update'>
      <i class='fas fa-save'></i>Update Colors</button>
  </div>
</form>
