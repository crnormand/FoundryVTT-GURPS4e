<div id='basic-attributes'>
  <div class='header'>{{i18n "GURPS.attributesPrimary"}}</div>
  <div class='fieldblock3'>

    <div class='points'>
      {{#if isEditing}}
      [<input name='data.attributes.ST.points' class='gcs-input-sm2' type='number'
        value='{{data.attributes.ST.points}}' />]
      {{else}}
      [{{data.attributes.ST.points}}]
      {{/if}}
    </div>
    {{#if isEditing}}
    <div class='field'>
      <input name='data.attributes.ST.import' class='gcs-input' type='number' value='{{data.attributes.ST.import}}' />
    </div>
    {{else}}
    <div class='field rollable' data-path='attributes.ST.value' data-otf='ST'>{{data.attributes.ST.value}}</div>
    {{/if}}
    <div class='label'>{{i18n 'GURPS.attributesSTNAME'}} ({{i18n 'GURPS.attributesST'}})</div>

    <div class='points'>
      {{#if isEditing}}
      [<input name='data.attributes.DX.points' class='gcs-input-sm2' type='number'
        value='{{data.attributes.DX.points}}' />]
      {{else}}
      [{{data.attributes.DX.points}}]
      {{/if}}
    </div>
    {{#if isEditing}}
    <div class='field'>
      <input name='data.attributes.DX.import' class='gcs-input' type='number' value='{{data.attributes.DX.import}}' />
    </div>
    {{else}}
    <div class='field rollable' data-path='attributes.DX.value' data-otf='DX'>{{data.attributes.DX.value}}</div>
    {{/if}}
    <div class='label'>{{i18n 'GURPS.attributesDXNAME'}} ({{i18n 'GURPS.attributesDX'}})</div>

    <div class='points'>
      {{#if isEditing}}
      [<input name='data.attributes.IQ.points' class='gcs-input-sm2' type='number'
        value='{{data.attributes.IQ.points}}' />]
      {{else}}
      [{{data.attributes.IQ.points}}]
      {{/if}}
    </div>
    {{#if isEditing}}
    <div class='field'>
      <input name='data.attributes.IQ.import' class='gcs-input' type='number' value='{{data.attributes.IQ.import}}' />
    </div>
    {{else}}
    <div class='field rollable' data-path='attributes.IQ.value' data-otf='IQ'>{{data.attributes.IQ.value}}</div>
    {{/if}}
    <div class='label'>{{i18n 'GURPS.attributesIQNAME'}} ({{i18n 'GURPS.attributesIQ'}})</div>

    <div class='points'>
      {{#if isEditing}}
      [<input name='data.attributes.HT.points' class='gcs-input-sm2' type='number'
        value='{{data.attributes.HT.points}}' />]
      {{else}}
      [{{data.attributes.HT.points}}]
      {{/if}}
    </div>
    {{#if isEditing}}
    <div class='field'>
      <input name='data.attributes.HT.import' class='gcs-input' type='text' value='{{data.attributes.HT.import}}' />
    </div>
    {{else}}
    <div class='field rollable' data-path='attributes.HT.value' data-otf='HT'>{{data.attributes.HT.value}}</div>
    {{/if}}
    <div class='label'>{{i18n 'GURPS.attributesHTNAME'}} ({{i18n 'GURPS.attributesHT'}})</div>
    {{#if useQN}}
    <div class='points'>
      {{#if isEditing}}
      [<input name='data.attributes.QN.points' class='gcs-input-sm2' type='number'
        value='{{data.attributes.QN.points}}' />]
      {{else}}
      [{{data.attributes.QN.points}}]
      {{/if}}
    </div>
    {{#if isEditing}}
    <div class='field'>
      <input name='data.attributes.QN.import' class='gcs-input' type='text' value='{{data.attributes.QN.import}}' />
    </div>
    {{else}}
    <div class='field rollable' data-path='attributes.QN.value' data-otf='QN'>{{data.attributes.QN.value}}</div>
    {{/if}}
    <div class='label'>{{i18n 'GURPS.attributesQNNAME'}} ({{i18n 'GURPS.attributesQN'}})</div>
    {{/if}}
    <hr />

    <div class='points'></div>
    {{#if isEditing}}
    <div class='field'>
      <input name='data.thrust' class='gcs-input' type='text' value='{{data.thrust}}' />
    </div>
    {{else}}
    <div class='field noedit {{rollable (not isEditing)}}' data-damage data-otf='{{data.thrust}} dmg'>{{data.thrust}}
    </div>
    {{/if}}
    <div class='label'>{{i18n 'GURPS.thrust'}}</div>

    <div class='points'></div>
    {{#if isEditing}}
    <div class='field'>
      <input name='data.swing' class='gcs-input' type='text' value='{{data.swing}}' />
    </div>
    {{else}}
    <div class='field noedit {{rollable (not isEditing)}}' data-damage data-otf='{{data.swing}} dmg'>{{data.swing}}
    </div>
    {{/if}}
    <div class='label'>{{i18n 'GURPS.swing'}}</div>

    <div class='points'>
      {{#if isEditing}}
      [<input name='data.basicspeed.points' class='gcs-input-sm2' type='number' value='{{data.basicspeed.points}}' />]
      {{else}}
      [{{data.basicspeed.points}}]
      {{/if}}
    </div>
    {{#if isEditing}}
    <div class='field'>
      <input name='data.basicspeed.value' class='gcs-input' type='number' value='{{data.basicspeed.value}}' />
    </div>
    {{else}}
    <div class='field'>{{data.basicspeed.value}}</div>
    {{/if}}
    <div class='label'>{{i18n 'GURPS.basicspeed'}}</div>

    <div class='points'>
      {{#if isEditing}}
      [<input name='data.basicmove.points' class='gcs-input-sm2' type='number' value='{{data.basicmove.points}}' />]
      {{else}}
      [{{data.basicmove.points}}]
      {{/if}}
    </div>
    {{#if isEditing}}
    <div class='field'>
      <input name='data.basicmove.value' class='gcs-input' type='number' value='{{data.basicmove.value}}' />
    </div>
    {{else}}
    <div class='field'>{{data.basicmove.value}}</div>
    {{/if}}
    <div class='label'>{{i18n 'GURPS.basicmove'}}</div>
  </div>
</div>