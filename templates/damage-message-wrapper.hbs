<div>
  <div class='prefix'>{{verb}}{{dice}} {{damageTypeText}} damage.</div>
  {{#if userTarget}}
  <div style='font-size: smaller; margin-left: .5rem;'><i class="fas fa-bullseye"></i>&nbsp;Targeting
    {{userTarget.data.name}}</div>
  {{/if}}
  <div class='roll-message'>
    {{#if modifiers}}
    <hr />
    <ul class='modifier-list'>
      {{#each modifiers}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    {{/if}}
  </div>
  <div class='damage-chat-message'>
    {{#each draggableData}}
    <div class='gurps damage-message' data-transfer='{{transfer}}'>

      <div class='roll-message'>
        <div class='collapsible-wrapper'>
          <input id='collapsible-{{id}}' class='toggle offscreen-only' type='checkbox'>
          <label for='collapsible-{{id}}' class='roll-result {{#if hasExplanation}}label-toggle{{/if}}'>
            <span>{{#if target}}&nbsp;{{target}}:{{/if}}
              <i class='fa fa-dice'></i><i class='fa fa-long-arrow-alt-right'></i>
              <span class='roll-value'>{{damage}}</span>
              <span class='roll-detail'>{{pluralize 'point' damage}} of damage.</span>
            </span>
          </label>
          {{#if hasExplanation}}
          <div class='gurps-group collapsible-content'>
            <div class='content-inner'>
              <hr />
              {{#if explainLineOne}}
              <div style='text-align: start' class='aside'>{{explainLineOne}}</div>
              {{/if}}
              {{#if explainLineTwo}}
              <div style='text-align: start' class='aside'>{{explainLineTwo}}</div>
              {{/if}}
              {{#if isB378}}
              <div class='aside'>* â€” Minimum damage rule applied. (<span class='pdflink'>B378</span>)</div>
              {{/if}}
            </div>
          </div>
          {{/if}}
        </div>
      </div>

    </div>
    {{/each}}
    {{#if (gt draggableData.length 1)}}
    <div class='gurps damage-all-message' data-transfer='{{transfer}}' {{#if (gt draggableData.length 5)}}style=' 
        background-image: url("systems/gurps/icons/all-the-things-transparent.png"); 
        background-size: 50%; background-repeat: no-repeat; background-attachment: local;
        background-position: right;' {{/if}}>
      <span style='font-weight: 900;'><i class="fas fa-layer-group"></i>&nbsp;{{#if (gt draggableData.length 5)}}ALL THE
        DAMAGE!!{{else}}ALL DAMAGE{{/if}}</span>
    </div>
    {{/if}}
    <div>
      <button class='apply-all' style='margin-top: 0.25rem;'>Apply All to {{userTarget.data.name}}</button>
    </div>
  </div>
</div>